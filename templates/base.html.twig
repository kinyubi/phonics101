{# MODALS BLOCK #}
{% block modals %}
    {% if errors %}
        <div class="modal" id="modalError" tabindex="-1" role="dialog"
             aria-labelledby="modalErrorLabel" aria-hidden="true" style="width: 40%">
            <div class="modal-dialog modal-dialog-centered" role="document">
                <div class="modal-content">
                    <div class="modal-header bg-danger text-light">
                        <h5 class="modal-title" id="modalErrorLabel">{{ pageTitle }}</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div id="modalErrorText" class="modal-body">
                        {{ errors|raw }}
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    {% endif %}
{% endblock %}

{# breadcrumbs in the titlebar
if a user has multiple students:  <username> / students / lessons / <lessonname>
 if a user has one student:        <username> / <studentname> / lessons / <lessonname>
#}
{% block titleBar %}
	{# TITLE BAR - START #}
	<div class="ml-0 row bg-white  d-flex flex-wrap justify-content-start height--title-bar align-baseline h1 my-2 header-design" id="readxyz-title">
        <div class="header-container">
            {# title bar: logo #}
            <div class="bg-image--title header-logo"></div>
            {# title bar: nav items #}
            {% for title, link in navBar %}
                <a id="menuItem-{{ loop.index }}" class="nav-link text-black-50" href="{{ link }}">{{ title }}</a>
            {% endfor %}
            {# title bar - breadcrumbs #}

            {% if previous_crumbs or this_crumb %}
                <div class="my-auto mx-3 header-breadcrumbs">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb h6">
                            {% for crumb in previous_crumbs %}
                                {% set decoration = ((crumb.link is empty) or (crumb.link == '#')) ? 'style="text-decoration: none;color: #6c757d;"' : '' %}
                                <li class="breadcrumb-item"><a href="{{ crumb.link }}" {{ decoration }}>{{ crumb.text|capitalize }}</a></li>
                            {% endfor %}
                            {% if this_crumb %}
                                <li class="breadcrumb-item active " aria-current="page">{{ this_crumb|capitalize }}</li>
                            {% endif %}
                        </ol>
                    </nav>
                </div>
            {% endif %}

            {# placeholder to allow screen to define zoo animals #}
            {% set useModal = false %}
            {% if (animals and not hideTitleAnimals) %}
                {% set studentCode = session.currStudent|default %}
                {% set studentName = (studentCode is empty) ? '' : session['STUDENTS'][studentCode].studentName %}
                {% set zooClass = (studentName is empty) ?  '' :  'zoo-animals' %}
                {% set zooUrl = (zooClass is empty) ? '#' : zooUrl %}
                {% set dim = smaller ? '40' : '60' %}

                <div style="display: none;" id="animal-index">{{ animalIndex }}</div>

                <div class="header-next-animal-container" style="width: {{ dim }}px; height: {{ dim }}px">
                    {% set titleText = 'Award this animal prize to ' ~ studentName %}
                    {% set nextAnimal = animalIndex + 1 %}
                    <a id="next-animal"  href="/award.php?n={{ nextAnimal }}"
                        class="award my-0 mx-2 p-0" >
                        <img class="header-animal-image" src="{{ animals[1].grayFileName }}" alt="Next Animal"
                            title="{{ titleText }}"  class="mw-100 mh-100  m-0" id="next-animal-img">
                    </a>
                </div>

                <div class="header-current-animal-container" style="width: {{ dim }}px; height: {{ dim }}px">
                    <a id="current-animal" class="my-0 mx-3 p-0 {{ zooClass }}" href="{{ zooUrl }}">
                        <img class="header-animal-image" src="{{ animals[0].fileName }}" alt="My Latest Animal"
                            title="See my zoo" class="mw-100 mh-100" id="current-animal-img">
                    </a>
                </div>

                {% if studentList is defined %}
                    <div class="dropdown header-dropdown">
                        <button class="btn btn-default header-dropdown-button" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-xpanded="false" aria-expanded="false">
                            <img class="students-arrow-down" src="/images/arrow-down.PNG" id="arrow-down-img">
                        </button>


                        <div class="dropdown-menu header-dropdown-menu" aria-labelledby="dropdownMenuButton" style="">
                            {% for student in studentList %}
                                {% if student.title != studentName %}
                                    <a class="dropdown-item header-dropdown-item" href="{{student.url}}">{{student.title}}</a>
                                {% endif %}
                            {% endfor %}
                        </div>

                        <div class="header-student-details">
                            <p class="header-student-name">{{ studentName }}</p>
                        </div>
                    </div>
                {% endif %}

                <div class="mobile-bars-container">
                    <i class="mobile-bars fas fa-bars fa-1x" onclick="mobileNav.open()"></i>
                </div>

                <div id="mobile-menu-overlay" class="mobile-menu-overlay">
                    <div class="mobile-menu-header">
                        <div class="mobile-header-current-animal-container">
                            <a id="current-animal" class="my-0 mx-3 p-0 {{ zooClass }}" href="{{ zooUrl }}">
                                <img class="mobile-header-animal-image" src="{{ animals[0].fileName }}" alt="My Latest Animal"
                                    title="See my zoo" class="mw-100 mh-100" id="current-animal-img">
                            </a>
                        </div>
                        <div class="mobile-header-next-animal-container">
                            {% set titleText = 'Award this animal prize to ' ~ studentName %}
                            {% set nextAnimal = animalIndex + 1 %}
                            <a id="next-animal"  href="/award.php?n={{ nextAnimal }}"
                                class="award my-0 mx-2 p-0" >
                                <img class="mobile-header-animal-image" src="{{ animals[1].grayFileName }}" alt="Next Animal"
                                    title="{{ titleText }}"  class="mw-100 mh-100  m-0" id="next-animal-img">
                            </a>
                        </div>
                        <span class="mobile-header-text">{{studentName}}</span>
                        <div class="mobile-header-close-container">
                            <i class="mobile-header-close fas fa-times fa-1x" onclick="mobileNav.close()"></i>
                        </div>
                    </div>
                    <div class="mobile-header-content">
                        {% if previous_crumbs or this_crumb %}
                                {% for crumb in previous_crumbs %}
                                    {% if((crumb.link is empty) or (crumb.link == '#')) %}
                                    <div class="mobile-header-content-item mobile-header-content-item-inactive">
                                        <a href="{{crumb.link}}">
                                            {{crumb.text|capitalize}}
                                        </a>
                                    </div>
                                    {% else %}
                                    <div class="mobile-header-content-item">
                                        <a href="{{crumb.link}}">
                                            {{crumb.text|capitalize}}
                                        </a>
                                    </div>
                                {% endif %}
                                {% endfor %}
                                {% if this_crumb %}
                                    <div class="mobile-header-content-item mobile-header-content-item-active">
                                        <span>{{ this_crumb|capitalize }}</span>
                                    </div>
                                {% endif %}
                        {% endif %}
                    </div>
                </div>




                {# dialog(id, title, text, clickTarget, doneFunc) #}
    {#                {{ dialog("award-confirm", "Award Ceremony", titleText, '/handler/award', 'noAward') }}#}
            {% endif %}
        </div>





	</div>
{% endblock titleBar %}
